<p id="notice"><%= notice %></p>

<h1>Boleta</h1>

<table>
  <thead>
    <tr>
      <th>Monto:</th>
      <th>Descuento:</th>
      <th>Fecha</th>
      <th>Pedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boleta.each do |boletum| %>
      <tr>
        <td><%= boletum.monto %></td>
        <td><%= boletum.descuento %></td>
        <td><%= boletum.fecha %></td>
        <td><%= boletum.pedido_id %></td>
        <td><%= link_to 'Ver', boletum %></td>
        <td><%= link_to 'Editar', edit_boletum_path(boletum) %></td>
        <td><%= link_to 'Eliminar', boletum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

