<p id="notice"><%= notice %></p>

<h1>Chips</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chips.each do |chip| %>
      <tr>
        <td><%= chip.descripcion %></td>
        <td><%= chip.valor %></td>
        <td><%= link_to 'Show', chip %></td>
        <td><%= link_to 'Edit', edit_chip_path(chip) %></td>
        <td><%= link_to 'Destroy', chip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chip', new_chip_path %>
